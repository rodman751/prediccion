<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - prediccion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/prediccion.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-primary shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center fw-bold" asp-area="" asp-controller="Home" asp-action="Inicio">
                    <i class="bi bi-graph-up-arrow me-2 fs-4"></i> Predicción
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center fw-semibold" asp-area="" asp-controller="Home" asp-action="Inicio">
                                <i class="bi bi-house-door-fill me-2 fs-5"></i> Inicio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center fw-semibold" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-bar-chart-line-fill me-2 fs-5"></i> Predicción
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white d-flex align-items-center fw-semibold" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-info-circle-fill me-2 fs-5"></i> Acerca de Nosotros
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-white shadow-sm py-4 mt-5">
        <div class="container text-center">
            <p class="mb-1 text-secondary small">
                &copy; 2025 - <span class="fw-bold text-primary">Sistema de Predicción de Dígitos</span>
            </p>
            <a class="text-decoration-none fw-semibold text-primary" asp-area="" asp-controller="Home" asp-action="Privacy">
                Acerca de Nosotros
            </a>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
