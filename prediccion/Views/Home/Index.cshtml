<div class="container page-center">
    <!-- Sección de portada -->
    <section class="text-center mb-5">
        <h1 class="display-4 fw-bold text-primary">
            🧠 Sistema Inteligente de Predicción de Dígitos
        </h1>
        <p class="lead text-muted mt-3">
            Suba una imagen de un número manuscrito y nuestro modelo de inteligencia artificial predecirá el dígito con alta precisión.
        </p>
    </section>

    <!-- Formulario de predicción -->
    <section class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <form asp-action="Index" enctype="multipart/form-data" method="post" class="text-center">
                        <div class="mb-4">
                            <label for="imagenInput" class="form-label">Seleccione una imagen:</label>
                            <input type="file" class="form-control" id="imagenInput" name="imagen" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-search me-2"></i>Predecir Número
                        </button>
                    </form>
                    @if (ViewBag.Resultado != null)
                    {
                        <div class="alert alert-success mt-4">
                            <h4 class="alert-heading mb-0">Resultado de Predicción:</h4>
                            <p class="display-6 mb-0">@ViewBag.Resultado</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

